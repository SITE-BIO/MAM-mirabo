{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    // "watch": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "noResolve": false,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "lib": ["es6"],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "test.js",
    "./dist"
  ],
  "includes": [
    "./src/"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ]
}